/* LAYOUT */
.media-grid .grid-row,
.media .content,
.media-player,
.teaser-group,
.search-heading,
.tabbed-box .tabbed-box-part,
.facts {
  zoom: 1;
}


/* INLINE BLOCK */
.javascript #top-teasers .login-info A.action,
.javascript #top-teasers .login-info A.action SPAN,
#top-teasers .search .search-field {
  display: inline;
  zoom: 1;
}


OL { padding-left: 2.3em; }
.tags UL,
UL.tags {
  padding-bottom: 3px;  
}
.tooltipElm SPAN {
  background: #333;
}
.article .tools,
#comments,
.comment,
.article,
#menus,
#top-teasers .teaser,
.poll .result,
.poll .question {
  min-height: 1px;
}
.poll .result,
.poll .question {
  background-color: white;
}
.column2 .poll FIELDSET DIV {
    float: none;
}
.carousel-box-part,
.tabbed-box-part {
  background: white;
}
.box-body ol {
  padding-left: 2em;  
}
.form-box-magazine-archive-search #search-magazine-archive {
  width: 160px;
}
.form-box-simple-login FIELDSET A {
  display: block;
  margin: 3px 0 0 0;
}
.teaser p a.comments, .small-teaser p a.comments {
  top: -4px;
}
.form-box-advanced-search .time-frame {
  padding-bottom: 15px;
}
.simple-login .submit {
  display: block;
  margin: 0 0 6px 0;
}
#page-cover {
  filter: alpha(opacity=50)
}
#header {
}
#menus {
  z-index: 999;
}
.media-tooltip {
  margin-top: 10px;
}
.miniteaser p {
    width: 100%;
}
.create-new-comment .articleCommentFormAgreement {
  padding-bottom: 14px;
}
.create-new-comment .articleCommentFormAgreement LABEL {
  top: 11px;
}
#top-teasers .search {
  width: auto;
}
#top-teasers .login form .submit {
  float: left;
}
#top-teasers .login-info A {
  position: relative;
  top: -8px;
}
#top-teasers .login-info A.action {
  line-height: 1.1;
  top: 0;
}
#top-teasers .search INPUT[type=text],
#top-teasers .login FORM INPUT[type=text],
#top-teasers .login FORM INPUT[type=password] {
  height: 16px;
  margin-top: 6px;
  margin-bottom: 5px;
}
.teaser .links ul {
	padding: 0;
}
.teaser .links a {
	display: list-item;
	list-style-position: inside;
	list-style-type: none;
	white-space: nowrap;
}


/* --------------------------------------------------------------
  New prenumerera pages
-------------------------------------------------------------- */
#authenticatorPopup,
#authenticatorPopup iframe {
  height: 546px;
}
.page-prenumerera .button,
.page-prenumerera .submit,
#content .ad .button,
.page-prenumerera.page-login #content .article .ad .button {
  display: inline;
  zoom: 1;
  padding-right: 0px;
  padding-left: 0px;  
}
.page-prenumerera.page-login #content .article .ad .button {
  padding: 0;
}
.page-prenumerera .button span,
.page-prenumerera .submit span,
#content .ad .button span,
.page-prenumerera.page-login #content .article .ad .button span {
  margin-left: 4px;
}
.page-prenumerera .button:focus,
.page-prenumerera .button:hover,
.page-prenumerera .submit:focus,
.page-prenumerera .submit:hover,
.page-prenumerera.page-login #content .article .ad .button span:focus,
.page-prenumerera.page-login #content .article .ad .button span:hover {
  margin-top: 1px;
}
.page-prenumerera.page-login .form-box-login #simple-user-name,
.page-prenumerera.page-login .form-box-login #simple-user-password,
.page-prenumerera.page-login .form-box-login #simple-user-password-confirm {
  background-image: none;
  padding-left: 14px;
}
#content .ad .button span,
.page-prenumerera.page-login #content .article .ad .button span {
  display: block;
  padding: 12px 18px 10px 14px;
  font-family: "Lato", Arial, Helvetica, sans-serif;
  font-size: 16px;
  line-height: 24px;
  color: white;  
}
.page-prenumeration-products .product { 
  height: 380px;
}
.page-prenumerera.page-login #content .article .buttonClose {
  top: -315px;
}
.page-prenumerera.page-login .form-box-login .buttonBack { 
  width: 212px;
}