#header,
#content,
#footer,
.columns-1-1,
.columns-2-1,
.columns-3-1,
.columns-1-2,
.columns-1-1-1,
.column1,
.column2,
.column3,
.column4 {
	overflow: visible;
}
#header,
#content,
#footer,
.article {
	clear: both;
	width: auto;
}
.has-article .column2,
.has-article .columns-1-1,
.has-article .columns-1-2,
.has-article .columns-2-1,
.has-article .columns-1-1-1,
body > div[style*="height"] {
	display: none;
}
.ad,
.socialwidget,
.has-article .newsletter-teaser,
.has-article .skip,
.has-article #header .tools,
.has-article #top-teasers,
.has-article #menus,
.has-article #footer,
.has-article .article .tools,
.has-article .additional-content,
.has-article .links,
.has-article .tags,
.has-article .latest-comment,
.has-article .media-slideshow .navigation,
.has-article #comments,
.has-article .page-menu,
.has-article .dm-plus-box,
.has-article .page-navigation,
.has-article #recommend,
.has-article .section-heading,
.has-article .subsection,
.has-article .teaser {
	display: none !important;
}
html,
.has-article * {
	background: none !important;
}
.has-article .first,
.has-article .first .columns-1-1,
.has-article .first .columns-1-2,
.has-article .first .columns-2-1,
.has-article .first .columns-1-1-1 {
	display: block;
}
.has-article #page,
.has-article .columns-1-1,
.has-article .columns-1-2,
.has-article .columns-2-1,
.has-article .columns-1-1 .column1,
.has-article .columns-1-2 .column1,
.has-article .columns-2-1 .column1,
.has-article .columns-2-1 .column1 .columns-2-1 .column1 {
	width: 100%;
	float: none;
}
.has-article #header {
	border-bottom: 1px solid #ccc;
	padding-bottom: 12px;
}
.has-article #header #logo {
	position: relative;
	top: 0;
	left: 0;
	display: block;
}
.has-article #page,
.has-article .columns-2-1 .column1 {
	padding: 0;
}
.has-article .media {
	margin-bottom: 20px;
}
.has-article #comments H2 A {
	display: none;
}
.has-article .comment {
	border-bottom: 1px solid #ccc;
	padding: 10px 0;
}
.has-article .comment .entry-content,
.has-article .comment .entry-title {
	padding-left: 0;
	padding-right: 0;
}
.has-article .comment .entry-meta {
	padding: 0px;
	position: relative;
	left: 0px;
}
#header {
    border-top: 0;
}